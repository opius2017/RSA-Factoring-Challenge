#!/usr/bin/env python3
""" Factor numbers """
import sys
import math


def read_numbers_from_file(file_name):
    """Reads numbers from a file and returns them as a list"""
    try:
        with open(test00, "r", encoding="utf-8") as file:
            return [int(line.strip()) for line in file]
    except (FileNotFoundError, ValueError) as e:
        print(f"Error reading file: {str(e)}")
        sys.exit(1)


def factorize(n):
    """Finds the factors of a given number and returns them as a list"""
    factors = []
    for i in range(1, int(math.sqrt(n)) + 1):
        if n % i == 0:
            factors.append((i, n // i))
    return factors


def print_factors(n, factors):
    """Prints the factors of a given number in the form of a multiplication equation"""
    print(f"{n} = ", end="")
    for factor_pair in factors:
        print(f"{factor_pair[0]} * {factor_pair[1]}", end="")
        if factor_pair != factors[-1]:
            print(" = ", end="")
    print()


def factorize_numbers(numbers):
    """Factorizes a list of numbers and prints the results"""
    if not numbers:
        print("No numbers to factorize")
        return
    for n in numbers:
        factors = factorize(n)
        print_factors(n, factors)


if __name__ == "__main__":
    if len(sys.argv) == 2:
        numbers = read_numbers_from_file(sys.argv[1])
        factorize_numbers(numbers)
    else:
        print("Usage: factorize.py <file_name>")
        sys.exit(1)

